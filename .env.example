# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-256-bits-long
DEBUG=false
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
API_BASE_URL=http://localhost:8000/api/v1

# Database Configuration (for PostgreSQL)
POSTGRES_DB=payroll_db
POSTGRES_USER=payroll_user
POSTGRES_PASSWORD=your-secure-password-here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Payroll System

# Company Information
COMPANY_NAME=NANLINE COMPANY LIMITED
COMPANY_EMP_NUMBER=P051217793P

# Security
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Uploads
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Redis Configuration
REDIS_URL=redis://redis:6379

# Monitoring
ENABLE_FLOWER=true
FLOWER_PORT=5555

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOGS=true

# Performance
ENABLE_CACHE=true
CACHE_TIMEOUT=3600

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true